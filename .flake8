[flake8]
max-line-length = 88
ignore = 
    E203,E501,W503,W504,E402,W292,E302,E305,F401,I100,I101,I201

exclude = 
    .git,
    __pycache__,
    .pytest_cache,
    venv,
    env,
    .venv,
    .env,
    build,
    dist,
    *.egg-info,
    .tox,
    migrations

# Import order settings
import-order-style = google
application-import-names = src

# Complexity settings
max-complexity = 10

# Per-file ignores for existing code
per-file-ignores =
    __init__.py:F401,E402
    tests/*:S101,S311,S106,F401,E302,E305
    test_*.py:S101,S311,S106,F401,E302,E305
    *_test.py:S101,S311,S106,F401,E302,E305
    src/*:I100,I101,I201,E302,E305,F401,W292
