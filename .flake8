[flake8]
# Maximum line length (this is important)
max-line-length = 88

# From what I understood from the docs this is for selecting the errors
select = 
    E,  # pycodestyle errors
    W,  # pycodestyle warnings
    F,  # pyflakes
    C,  # complexity
    B,  # flake8-bugbear
    S,  # flake8-bandit
    I,  # flake8-import-order

# Ignore specific error codes (here's the list: https://flake8.pycqa.org/en/latest/user/error-codes.html)
ignore = E203,W503,E501,W504,E402

exclude = 
    .git,
    __pycache__,
    .pytest_cache,
    venv,
    env,
    .venv,
    .env,
    build,
    dist,
    *.egg-info,
    .tox,
    migrations

import-order-style = google
application-import-names = src

max-complexity = 10

# pecific plugins
enable-extensions = 
    B,  # flake8-bugbear
    C,  # mccabe complexity
    I,  # import order

# for-each-file ignores
per-file-ignores =
    __init__.py:F401,E402
    tests/*:S101,S311,S106
    test_*.py:S101,S311,S106
    *_test.py:S101,S311,S106
